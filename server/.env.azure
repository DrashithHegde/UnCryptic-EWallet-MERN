# Azure Environment Variables
# Copy these to Azure Portal → App Service → Configuration → Application settings

PORT=8080
NODE_ENV=production

# MongoDB Connection
MONGO_URI=your_mongodb_atlas_connection_string_here

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Azure Frontend URL (set this to your Static Web Apps URL later)
AZURE_FRONTEND_URL=https://your-frontend.azurestaticapps.net

# Optional: Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your_key_here
